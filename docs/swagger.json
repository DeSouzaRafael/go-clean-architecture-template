                "description": "Search for a user by its UUID.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
                "summary": "Get User",
                "operationId": "getUser",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns the found user entity",
                        "schema": {
                            "$ref": "#/definitions/entity.UserEntity"
                        }
                    },
                    "400": {
                        "description": "Invalid UUID format",
